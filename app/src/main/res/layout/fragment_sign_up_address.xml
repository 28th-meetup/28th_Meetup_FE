<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SignUpAddressFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="9.133333206176758dp"
        android:outlineSpotShadowColor="#0A000000"
        android:theme="@style/ToolbarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="74.27dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="주소를 입력해 주세요."
            android:textColor="#1E1F23"
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:background="@drawable/text_login_input_background"
            android:fontFamily="@font/pretendard_regular"
            android:paddingHorizontal="22.83dp"
            android:paddingVertical="11.42dp"
            android:textColor="@color/gray3"
            android:textColorHint="@color/gray3"
            android:textSize="18.27sp" />

        <EditText
            android:id="@+id/edittext_location1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_login_input_background"
            android:fontFamily="@font/pretendard_regular"
            android:hint="도로명, 도시명, 주소를 입력해 주세요."
            android:inputType="text|textPersonName"
            android:paddingHorizontal="22.83dp"
            android:paddingVertical="11.42dp"
            android:textColor="@color/black"
            android:textColorHint="#6E7178"
            android:textSize="18.27sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_login_background"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="우편번호 확인하기"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>