<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/store_list_border"
    android:elevation="5dp"
android:gravity="center"
    android:layout_marginLeft="22.83dp"
    android:layout_marginBottom="22dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <LinearLayout

        android:layout_width="365.33dp"
        android:layout_height="238.52dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/store_list_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_1"
                android:layout_width="272.86dp"
                android:layout_height="160.98dp"
                android:src="@drawable/ic_mountain"
                android:background="@drawable/store_list_border_left_top" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="1.14dp">

                <ImageView
                    android:id="@+id/imageview_2"
                    android:layout_width="91.33dp"
                    android:layout_height="79.92dp"
                    android:src="@drawable/ic_mountain"
                    android:background="@drawable/store_list_border_right_top"
                    />

                <ImageView
                    android:id="@+id/imageview_3"
                    android:layout_width="91.33dp"
                    android:layout_height="79.92dp"
                    android:layout_marginTop="1.14dp"
                    android:src="@drawable/ic_mountain"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_store_name"
                android:layout_width="64dp"
                android:layout_height="26dp"
                android:layout_marginLeft="14.3dp"
                android:layout_marginTop="14.8dp"
                android:fontFamily="@font/pretendard_semi_bold"
                android:text="가게이름"
                android:textColor="@color/black"
                android:textSize="18.27sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageview_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.57dp"
                android:src="@drawable/ic_badge"
                app:layout_constraintBottom_toBottomOf="@+id/textview_store_name"
                app:layout_constraintStart_toEndOf="@+id/textview_store_name"
                app:layout_constraintTop_toTopOf="@+id/textview_store_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/textview_store_name"
                app:layout_constraintTop_toBottomOf="@+id/textview_store_name">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="최소주문"
                    android:textColor="#6E7178"
                    android:textSize="13.7sp" />

                <TextView
                    android:id="@+id/textview_least_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="100,000원"
                    android:textColor="@color/black"
                    android:textSize="13.7sp" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:background="@color/black" />

                <TextView
                    android:id="@+id/textview_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:drawableLeft="@drawable/ic_star"
                    android:drawablePadding="1dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="4.8"
                    android:textSize="13.7sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
