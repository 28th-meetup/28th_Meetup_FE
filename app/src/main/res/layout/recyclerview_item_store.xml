<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="365.33dp"
    android:layout_height="238.52dp"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:background="@drawable/store_list_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="272.86dp"
            android:layout_height="160.98dp"
            android:background="#EBEFF7"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="1.14dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="91.33dp"
                android:layout_height="79.92dp"
                android:background="#EBEFF7"/>
            <ImageView
                android:layout_marginTop="1.14dp"
                android:layout_width="91.33dp"
                android:layout_height="79.92dp"
                android:background="#EBEFF7"/>
        </LinearLayout>
    </LinearLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="가게이름"
        android:textColor="@color/black"
        android:textSize="18.27sp"
        android:layout_marginLeft="14.3dp"
        android:layout_marginTop="14.8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_badge"
        android:layout_marginLeft="4.57dp"
        app:layout_constraintBottom_toBottomOf="@+id/textview_store_name"
        app:layout_constraintStart_toEndOf="@+id/textview_store_name"
        app:layout_constraintTop_toTopOf="@+id/textview_store_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/textview_store_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_store_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13.7sp"
            android:textColor="#6E7178"
            android:text="최소주문" />

        <TextView
            android:id="@+id/textview_least_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="13.7sp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/black"
            android:text="100,000원"/>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/textview_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="4.8"
            android:drawablePadding="1dp"
            android:fontFamily="@font/pretendard_regular"
            android:drawableLeft="@drawable/ic_star"
            android:textSize="13.7sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>