<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.StoreAddSuccessFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.67dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="가게 등록이 완료되었습니다."
            android:textColor="@color/black"
            android:textSize="25.12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.7dp"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:text="홈에서 판매자 모드로\n전환이 가능합니다."
            android:textSize="18.27sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_go_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.79dp"
            android:backgroundTint="@color/main_color"
            app:cardCornerRadius="10.15dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="88dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/pretendard_semi_bold"
                android:text="홈으로"
                android:textColor="#FFFFFF"
                android:textSize="20.55sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


</layout>
