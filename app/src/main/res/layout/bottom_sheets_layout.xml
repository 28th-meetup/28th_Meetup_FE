<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"

    android:background="@drawable/bottom_sheet_border"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_bottom_sheets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:background="@color/transparent"

        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bottom_sheet_icon"
            android:paddingTop="22dp"
            android:background="@drawable/bottom_sheet_border"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정렬"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textSize="20.55sp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEFF7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="후기 많은 순"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="20.55sp"
            android:textColor="#4B4D53"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEFF7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="평점 많은 순"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="20.55sp"
            android:textColor="#4B4D53"

            android:paddingBottom="18dp"
            android:paddingTop="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEFF7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="높은 가격 순"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="20.55sp"
            android:textColor="#4B4D53"

            android:paddingBottom="18dp"
            android:paddingTop="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEFF7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="낮은 가격 순"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="20.55sp"
            android:textColor="#4B4D53"

            android:paddingBottom="18dp"
            android:paddingTop="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EBEFF7"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최신순"
            android:gravity="center"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="20.55sp"
            android:textColor="#4B4D53"

            android:paddingBottom="18dp"
            android:paddingTop="18dp"/>



    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>