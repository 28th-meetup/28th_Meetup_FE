<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="85.62dp"
        android:layout_height="85.62dp"
        android:layout_marginLeft="22.83dp"
        android:layout_marginTop="34.25dp"
        app:cardCornerRadius="11.42dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_menu_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_blue2" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textview_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11.42dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="소고기 미역국"
        android:textColor="@color/black"
        android:textSize="20.55dp"
        app:layout_constraintStart_toEndOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <TextView
        android:id="@+id/textview_menu_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.85dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="카테고리 : 국물류"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textview_menu_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_menu_name" />

    <TextView
        android:id="@+id/textview_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text="가격 : 8,000원"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textview_menu_name"
        app:layout_constraintTop_toBottomOf="@+id/textview_menu_category" />

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22.86dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textview_menu_name" />

    <ImageView
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22.86dp"
        android:src="@drawable/ic_btn_delete"

        app:layout_constraintBottom_toBottomOf="@+id/textview_menu_price"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="22.83dp"
        android:background="@color/gray_blue2"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />
</androidx.constraintlayout.widget.ConstraintLayout>