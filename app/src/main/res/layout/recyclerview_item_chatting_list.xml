<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="61.56dp"
        android:layout_height="61.65dp"
        app:cardCornerRadius="45dp"
        android:layout_marginTop="18.27dp"
        android:layout_marginLeft="22.83dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageview_chatting_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_blue2" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textview_chatting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="빛나반찬"
        android:layout_marginLeft="11.42dp"
        android:textColor="@color/black"
        android:textSize="20.55sp"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <TextView
        android:id="@+id/textview_chatting_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:text="내용"
        android:layout_marginLeft="11.42dp"
        android:textColor="@color/gray2"
        android:textSize="16sp"
        android:layout_marginTop="6.85dp"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/textview_chatting_name" />

    <TextView
        android:id="@+id/textview_chatting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_light"
        android:text="01:29"
        android:textColor="@color/gray3"
        android:textSize="13.7sp"
        android:layout_marginTop="29.53dp"
        android:layout_marginRight="22.83dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:layout_width="18.27dp"
        android:layout_height="18.27dp"
        android:backgroundTint="@color/main_color"
        app:cardCornerRadius="45dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@+id/textview_chatting_time"
        app:layout_constraintTop_toBottomOf="@+id/textview_chatting_time">

        <TextView
            android:id="@+id/textview_chatting_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18.27dp"
        android:background="@color/gray_blue2"
        app:layout_constraintTop_toBottomOf="@+id/textview_chatting_content" />
</androidx.constraintlayout.widget.ConstraintLayout>