<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.OrderCompleteFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="256.87dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/img_complete" />

        <TextView
            android:id="@+id/textview_complete1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.8dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="주문이 완료되었습니다."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25.12sp" />

        <TextView
            android:id="@+id/textview_complete2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11.42dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="집밥 맛 그대로, \n맛있는 음식이 곧 찾아갑니다!"
            android:textAlignment="center"
            android:textColor="@color/gray3"
            android:textSize="18.12sp" />

        <Button
            android:id="@+id/button_order_list"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="34.49dp"
            android:background="@drawable/layout_order_food_background"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="주문내역 보기"
            android:textSize="20.55sp" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22.83dp"
            android:background="@drawable/button_radius"
            android:fontFamily="@font/pretendard_semi_bold"
            android:text="홈으로"
            android:textColor="@color/white"
            android:textSize="20.55sp" />
    </LinearLayout>

</LinearLayout>