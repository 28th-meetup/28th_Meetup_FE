<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_certification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.CertificationFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="9.133333206176758dp"
        android:outlineSpotShadowColor="#0A000000"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="22.83dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18.27dp"
            android:src="@drawable/img_camera" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.83dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="여권을 촬영해 주세요."
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="25.12sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.7dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="테두리에 맞춰 여권을 놓고,\n‘촬영하기' 버튼을 눌러 주세요."
            android:textAlignment="center"
            android:textColor="@color/gray3"
            android:textSize="18.27sp" />

        <LinearLayout
            android:id="@+id/linearlayout_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50.72dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_photo"
                android:layout_width="match_parent"
                android:layout_height="274dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_basic" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_capture"
        android:layout_width="match_parent"
        android:layout_height="63.93333dp"
        android:layout_marginLeft="27.4dp"
        android:layout_marginRight="27.4dp"
        android:layout_marginBottom="27.4dp"
        android:background="@drawable/button_radius"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="촬영하기"
        android:textColor="@color/white"
        android:textSize="20.55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>