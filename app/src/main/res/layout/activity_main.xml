<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="22.83dp"
    android:background="@color/main_color"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imageview_logo"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_logo" />

    <ImageButton
        android:id="@+id/button_kakao_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@color/transparent"
        android:src="@drawable/img_kakao_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_logo" />

    <ImageButton
        android:id="@+id/button_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.98dp"
        android:background="@color/transparent"
        android:src="@drawable/img_email_login"
        app:layout_constraintEnd_toEndOf="@+id/button_kakao_login"
        app:layout_constraintStart_toStartOf="@+id/button_kakao_login"
        app:layout_constraintTop_toBottomOf="@+id/button_kakao_login" />

    <TextView
        android:id="@+id/textview_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="아직 회원이 아니라면?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15.98sp"
        android:layout_marginTop="45.67dp"
        app:layout_constraintEnd_toEndOf="@+id/button_email_login"
        app:layout_constraintStart_toStartOf="@+id/button_email_login"
        app:layout_constraintTop_toBottomOf="@+id/button_email_login" />

    <ImageButton
        android:id="@+id/button_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.85dp"
        android:background="@color/transparent"
        android:src="@drawable/img_email_signup"
        app:layout_constraintEnd_toEndOf="@+id/textview_sign_up"
        app:layout_constraintStart_toStartOf="@+id/textview_sign_up"
        app:layout_constraintTop_toBottomOf="@+id/textview_sign_up" />

</androidx.constraintlayout.widget.ConstraintLayout>