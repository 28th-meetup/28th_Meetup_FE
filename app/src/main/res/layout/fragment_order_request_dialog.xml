<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_marginLeft="27.4dp"
        android:layout_marginRight="27.4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.OrderRequestDialogFragment">

    <ImageView
        android:layout_width="34.25dp"
        android:layout_height="34.25dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_bell"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문이 도착했습니다"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="25.12sp"
        android:layout_gravity="center"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.84dp"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="9.13dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="50.23dp"
        android:layout_marginRight="50.23dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/gray_blue2"
        app:strokeColor="@color/gray_blue"
        app:strokeWidth="1dp">

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textview_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="밑반찬 세트"
                android:layout_marginTop="22.27dp"
                android:fontFamily="@font/pretendard_semi_bold"
                android:textSize="20.55sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[옵션] 기본 A 세트[나물+ 김치]"
                android:layout_marginLeft="29.37dp"
                android:layout_marginRight="29.37dp"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="16sp"
                android:layout_marginTop="6.85dp"
                android:textColor="@color/gray2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="16sp"
                android:layout_marginTop="11.42dp"
                android:textColor="@color/gray2"
                android:text="2023. 10. 16 10:00 AM"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semi_bold"
                android:textSize="16sp"
                android:layout_marginTop="6.45dp"
                android:textColor="@color/gray2"
                android:layout_marginBottom="22.27dp"
                android:text="2511 Chamming Way,\nBerkeley, CA 94704"/>


        </LinearLayout>






    </com.google.android.material.card.MaterialCardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginLeft="50.23dp"
        android:layout_marginRight="50.23dp"
        android:layout_marginTop="28.54dp"
        android:backgroundTint="@color/main_color"
        app:cardCornerRadius="10.15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 수락"
            android:layout_marginTop="16.4dp"
            android:layout_marginBottom="16.4dp"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textSize="20.55sp"
            android:textColor="#FFFFFF"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginBottom="63.62dp"
        android:layout_marginLeft="50.23dp"
        android:layout_marginRight="50.23dp"
        android:layout_marginTop="13.7dp"
        android:backgroundTint="#BFC1C5"
        app:cardCornerRadius="10.15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 거절"
            android:layout_marginTop="16.4dp"
            android:layout_marginBottom="16.4dp"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textSize="20.55sp"
            android:textColor="#FFFFFF"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>
    </FrameLayout>

</layout>
